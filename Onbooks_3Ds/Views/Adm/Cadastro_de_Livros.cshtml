<!-- form modal -->
<div id="fullscreen-div"></div>
<form asp-action="cadastrar_livro" asp-controller="Adm" method="post" enctype="multipart/form-data" class="modal" id="modal">
    <div class="modal-content">
        <div class="modal-head">
            <h3 id="modal-title">Cadastrar</h3>
            <button type="button" id="close-btn">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-main">
            <div class="modal-row">
                <div class="modal-col">
                    <label for="">Título</label>
                    <input asp-for="Titulo" type="text" placeholder="Ex: Príncipe Cruel" class="form-control" name="addr_ing_name">
                </div>
            </div>

            <div class="modal-row grid-row">
                <div class="modal-col">
                    <label for="">ISBN</label>
                    <input asp-for="Isbn" type="number" placeholder="" class="form-control" name="first_name">
                </div>
                <div class="modal-col">
                    <label for="">ISSN</label>
                    <input asp-for="Issn" type="number" placeholder="" class="form-control" name="last_name">
                </div>
            </div>
            <div class="modal-row grid-row">
                <div class="modal-col">
                    <label for="">Ano Publicação</label>
                    <input asp-for="Ano_publicacao" type="number" placeholder="yyyy/mm/dd" class="form-control" name="first_name">
                </div>
                <div class="modal-col">
                    <label for="">Codigo Da Editora</label>
                    <input asp-for="Editora" type="number" placeholder="Ex :(1)-Marvel" class="form-control" name="last_name">
                </div>
            </div>

            <div class="modal-row grid-row">
               
                <div class="modal-col">
                    <label for="">Imagem</label>
                    <input type="file" accept="image/*" placeholder="" class="form-control" name="phone">
                </div>
            </div>
            <div class="modal-row" id="modal-btns">
                <button type="submit" id="save-btn">Cadastrar</button>
            </div>
        </div>
    </div>
</form>
<!-- end of form modal -->
<!-- address book home -->
<div class="addr-book" id="addr-book">
    <div class="addr-book-content">
        <div class="addr-book-head">
            <i class="fa-solid fa-address-book fa-2x"></i>
            <h2>OnBooks</h2>
        </div>

        <div class="addr-book-top">
            <button type="button" class="btn" id="add-btn">
                <span><i class="fas fa-plus"></i> Cadastrar Livro</span>
            </button>
        </div>

        <div class="addr-book-list" id="addr-book-list">
            <table class="addr-table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>ISBN</th>
                        <th>ISSN</th>
                        <th>Imagem</th>
                        <th>Editora</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>
<!-- end of address book home -->



